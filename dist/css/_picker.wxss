.picker-bg{position:fixed;left:0;top:0;right:0;bottom:0;background:rgba(0,0,0,0.3);z-index:100}.picker-box{position:fixed;left:0;bottom:0;width:100%;text-align:center;transition:transform 0.5s;background:#fff;z-index:101}.picker{height:240px}.item{line-height:40px;height:40px}.btn-box{width:100%;overflow:hidden;background:#fbf9fe}.btn-box button{width:120rpx;height:40px;line-height:40px;background:transparent;border:0;border-radius:0;font-size:14px;color:#6b7ca0}.btn-box button::after{border:0;border-radius:0}.btn-box .cancel{float:left}.btn-box .ok{float:right}.btn-box .button-hover{opacity:1;color:#f9221c}
